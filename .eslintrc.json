{
  "env": {
    "node": true,
    "browser": true,
    "es2021": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "rules": {
    "prettier/prettier": "warn",
    "import/extensions": "off",
    "eslint-plugin-import/no-extraneous-dependencies":"off"
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaVersion": 2022
  },
  "ignorePatterns": ["node_modules", "build", "dist", "public"]
}
